<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.tfedu.zhl.cloud.resource.navigation.dao.TermMapper" >
  <resultMap id="BaseResultMap" type="net.tfedu.zhl.sso.term.entity.JTerm" >
    <!--
      WARNING - @mbggenerated
    -->
    <constructor >
      <idArg column="Id" jdbcType="BIGINT" javaType="java.lang.Long" />
      <arg column="Name" jdbcType="CHAR" javaType="java.lang.String" />
      <arg column="Notes" jdbcType="CHAR" javaType="java.lang.String" />
      <arg column="flag" jdbcType="BIT" javaType="java.lang.Boolean" />
      <arg column="code" jdbcType="CHAR" javaType="java.lang.String" />
    </constructor>
  </resultMap>
  
  <!-- 选择特定学段下的学科  -->
  <resultMap id="SubjectResultMap" type="net.tfedu.zhl.sso.subject.entity.JSubject" >
		<id column="id" property="id" />
		<result column="name" property="name" />
  </resultMap>
  <select id="getSubjectsByTerm" parameterType="Long" resultMap="SubjectResultMap">
		select s.id,s.name
		from j_term_subject ts 
		left join j_subject s on s.id = ts.subjectId
		where ts.flag = false and s.flag = false and ts.termId=#{termId}
  </select>
  
  <!-- 根据学段，查询学科  collection 关联查询 （测试用） -->
  <resultMap id="SubjectResultMap1" type="net.tfedu.zhl.sso.term.entity.JTerm">
		
		<collection property="subjects" ofType="net.tfedu.zhl.sso.subject.entity.JSubject">
			<id column="id" property="id" />
			<result column="name" property="name" />
		</collection>
  </resultMap>
  <select id="getSubjectsByTermId"  parameterType="Long" resultMap="SubjectResultMap1">
        select s.id,s.name
		from j_term t 
		left join j_term_subject ts on ts.termId = t.id 
		left join j_subject s on s.id = ts.subjectId
		where t.flag = false and ts.flag = false and s.flag = false and t.id=#{termId}
  </select>

  <!-- 获得所有学段 -->
  <resultMap id="AllTermsMap" type="net.tfedu.zhl.sso.term.entity.JTerm" >
		<id column="id" property="id" />
		<result column="name" property="name" />
  </resultMap>
  <select id="getAllTerms" resultMap="AllTermsMap">
		select id,name from j_term where name not like '其他%' and flag = false 
  </select>
</mapper>