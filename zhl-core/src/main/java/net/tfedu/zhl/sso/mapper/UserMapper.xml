<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.tfedu.zhl.sso.dao.UserMapper">
	<resultMap id="userMap" type="User">
		<id column="u_id" property="id" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="create_date" property="createDate" />
		<collection property="roles" ofType="Role">
			<id column="r_id" property="id" />
			<result column="name" property="name" />
		</collection>
		<collection property="userPermissions" ofType="Permission">
			<id column="p_id" property="id" />
			<result column="token" property="token" />
			<result column="url" property="url" />
			<result column="pRoleId" property="roleId" />
			<result column="description" property="description" />
		</collection>
	</resultMap>
	
	<select id="getUserByName" parameterType="String" resultMap="userMap">
		select u.id u_id,u.username,u.password,u.create_date,
		   r.id r_id,r.`name`,
           p.id p_id,p.token,p.url,p.description,p.role_id pRoleId 
		from sys_user u
		LEFT JOIN sys_user_role ur on u.id=ur.user_id
    LEFT JOIN sys_role r on ur.role_id=r.id
    LEFT JOIN sys_permission p on ur.role_id=p.role_id
		where u.username=#{username}
	</select>
</mapper>